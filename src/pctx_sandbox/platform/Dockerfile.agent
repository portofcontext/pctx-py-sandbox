ARG PYTHON_VERSION=3.10
FROM python:${PYTHON_VERSION}-slim

# Install system dependencies including curl for uv installation
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install uv for fast, reliable package management
RUN curl -LsSf https://astral.sh/uv/install.sh | sh && \
    mv /root/.local/bin/uv /usr/local/bin/uv && \
    mv /root/.local/bin/uvx /usr/local/bin/uvx

# Install Python dependencies for agent using uv
RUN uv pip install --system --no-cache \
    fastapi \
    uvicorn \
    cloudpickle \
    msgpack \
    httpx

# Create non-root user for running agent
RUN useradd -m -u 1000 -s /bin/bash sandbox && \
    # Remove /etc/shadow to prevent privilege escalation attempts
    rm -f /etc/shadow /etc/shadow- && \
    # Create empty shadow files with no permissions
    touch /etc/shadow && chmod 000 /etc/shadow

# Copy agent files
COPY agent/ /app/

# Create cache directory and set ownership
RUN mkdir -p /tmp/pctx-cache && chown -R sandbox:sandbox /app /tmp/pctx-cache

# Switch to non-root user
USER sandbox

# Expose agent port
EXPOSE 9000

# Run agent
CMD ["python", "simple_agent.py"]
